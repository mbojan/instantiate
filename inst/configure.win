@echo off
REM Delete or reconfigure the -falign-functions=1 line below if you get
REM the error "Default alignment for functions differs in PCH file vs. current file".
set CXXFLAGS=%CXXFLAGS% -falign-functions=1
"%R_HOME%\bin\Rscript.exe" -e "instantiate::stan_package_compile()"
if errorlevel 1 (
  echo "Could not compile Stan models" >&2
  exit /b 1
)
exit /b 0
